{
    "pref_overlay_key": {
        "type": "keybinding",
        "default": "",
        "description": "Keyboard shortcut to launch a custom command."
    },
    "pref_onkeybinding_command": {
        "type": "entry",
        "default": "gnome-system-monitor",
        "description": "Command to launch on keyboard shortcut",
        "tooltip": "Command to launch when the keyboard shortcut specified above is pressed."
    },
    "pref_onclick_command": {
        "type": "entry",
        "default": "gnome-system-monitor",
        "description": "Command to launch on click",
        "tooltip": "Command to launch when the applet is clicked."
    },
    "pref_smooth": {
        "type": "checkbox",
        "default": true,
        "description": "Smooth graphs"
    },
    "pref_graph_width": {
        "type": "spinbutton",
        "default": 40,
        "min": 10,
        "max": 1000,
        "step": 1,
        "description": "Common graph width",
        "units": "pixels",
        "tooltip": "If the applet is in a vertical panel, this sets the graph height. The graph width is then the panel width minus padding"
    },
    "pref_refresh_rate": {
        "type": "spinbutton",
        "default": 1000,
        "min": 100,
        "max": 10000,
        "step": 50,
        "description": "Refresh rate",
        "units": "ms"
    },
    "pref_use_padding": {
        "type": "checkbox",
        "default": false,
        "description": "Use custom applet padding"
    },
    "pref_padding_lr": {
        "type": "spinbutton",
        "default": 1,
        "min": 0,
        "max": 100,
        "step": 1,
        "description": "Left/right padding",
        "units": "pixels",
        "dependency": "pref_use_padding"
    },
    "pref_padding_tb": {
        "type": "spinbutton",
        "default": 1,
        "min": 0,
        "max": 100,
        "step": 1,
        "description": "Top/bottom padding",
        "units": "pixels",
        "dependency": "pref_use_padding"
    },
    "pref_draw_background": {
        "type": "checkbox",
        "default": false,
        "description": "Draw background"
    },
    "pref_bg_color": {
        "type": "colorchooser",
        "dependency": "pref_draw_background",
        "default": "rgba(0,0,0,0)",
        "description": "Background color"
    },
    "pref_draw_border": {
        "type": "checkbox",
        "default": false,
        "description": "Draw border"
    },
    "pref_border_color": {
        "type": "colorchooser",
        "dependency": "pref_draw_border",
        "default": "rgb(128,128,128)",
        "description": "Border color"
    },
    "cpu_separator": {
