{
    "head": {
        "type": "header",
        "description": "Most settings are not automatically saved when modified.\nPress any of the \"Click here to save settings\" buttons for the settings to take effect."
    },
    "save_settings_first": {
        "type": "button",
        "description": "Click here to save settings",
        "callback": "_hardRefreshAll"
    },

    "applet_settings_header": {
        "type": "header",
        "description": "Applet settings"
    },

    "pref_overlay_key": {
        "type": "keybinding",
        "indent": true,
        "description": "Keyboard shortcut to open and close the menu",
        "default": "Super_L::"
    },
    "pref_use_a_custom_icon_for_applet": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Use a custom icon",
        "tooltip": "Unchecking this allows the theme to set the icon"
    },
    "pref_custom_icon_for_applet": {
        "type": "iconfilechooser",
        "indent": true,
        "dependency": "pref_use_a_custom_icon_for_applet",
        "default": "custom-start-here-linux-mint-symbolic",
        "description": "Icon",
        "tooltip": "Select an icon to show in the panel."
    },
    "pref_custom_label_for_applet": {
        "type": "entry",
        "indent": true,
        "default": "Menu",
        "description": "Text",
        "tooltip": "Enter custom text to show in the panel."
    },

    "menu_settings_separator": {
        "type": "separator"
    },
    "menu_settings_header": {
        "type": "header",
        "description": "Menu settings"
    },
    "pref_enable_autoscroll": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Enable autoscrolling in application list",
        "tooltip": "Choose whether or not to enable smooth autoscrolling in the application list."
    },
    "pref_animate_menu": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Use menu animations",
        "tooltip": "Allow the menu to animate on open and close"
    },
    "pref_activate_on_hover": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Open the menu when I move my mouse over it",
        "tooltip": "Enable opening the menu when the mouse enters the applet"
    },
    "pref_menu_hover_delay": {
        "type": "spinbutton",
        "indent": true,
        "default": 100,
        "min": 0,
        "max": 1000,
        "step": 50,
        "units": "milliseconds",
        "dependency": "pref_activate_on_hover",
        "description": "Menu hover delay",
        "tooltip": "Delay before the menu opens when hovered"
    },

    "menu_layout_separator": {
        "type": "separator"
    },
    "menu_layout_header": {
        "type": "header",
        "description": "Menu layout"
    },
    "pref_recently_used_apps_enabled": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show \"Recent Applications\" category",
        "tooltip": "From the moment this option is enabled, every application launched from the menu will be stored and displayed in the \"Recent Applications\" category.\nEvery time this option is disabled, the list of recently used applications will be cleared."
    },
    "pref_show_category_icons": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show category icons",
        "tooltip": "Choose whether or not to show icons on categories."
    },
    "pref_show_application_icons": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show application icons",
        "tooltip": "Choose whether or not to show icons on applications."
    },
    "pref_hide_applications_list_scrollbar": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Hide applications list scrollbar",
        "tooltip": ""
    },
    "pref_invert_menu_layout": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Invert menu layout",
        "tooltip": ""
    },
    "pref_swap_categories_box": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Swap categories box",
        "tooltip": "By default, the categories box is to the left of the applications list. With this option enabled, the categories box will be placed to the right of the applications list."
    },
    "pref_custom_launchers_box_invert_buttons_order": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Invert custom launches box buttons order",
        "tooltip": ""
    },
    "pref_disable_new_apps_highlighting": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Disable newly installed applications highlighting",
        "tooltip": ""
    },
    "pref_max_width_for_buttons": {
        "type": "spinbutton",
        "indent": true,
        "default": 15,
        "min": 1,
        "max": 50,
        "step": 1,
        "units": "ems",
        "description": "Maximum button width:",
        "tooltip": "Define the maximum width of menu items inside the applications box."
    },
    "pref_category_icon_size": {
        "type": "spinbutton",
        "indent": true,
        "dependency": "pref_show_category_icons",
        "default": 22,
        "min": 16,
        "max": 256,
        "step": 2,
        "units": "pixels",
        "description": "Categories icon size:",
        "tooltip": ""
    },
    "pref_application_icon_size": {
        "type": "spinbutton",
        "indent": true,
        "dependency": "pref_show_application_icons",
        "default": 22,
        "min": 16,
        "max": 256,
        "step": 2,
        "units": "pixels",
        "description": "Applications icon size:",
        "tooltip": ""
    },
    "pref_custom_launchers_icon_size": {
        "type": "spinbutton",
        "indent": true,
        "default": 24,
        "min": 16,
        "max": 256,
        "step": 2,
        "units": "pixels",
        "description": "Custom launchers icon size:",
        "tooltip": ""
    },
    "pref_custom_launchers_box_alignment": {
        "type": "combobox",
        "indent": true,
        "default": 2,
        "description": "Custom launchers button alignment",
        "options": {
            "Left": 0,
            "Middle": 1,
            "Right": 2
        }
    },

    "recent_apps_separator": {
        "type": "separator"
    },
    "recent_apps_header": {
        "type": "header",
        "description": "Recent Applications"
    },
    "pref_recently_used_apps_ignore_favorites": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "dependency": "pref_recently_used_apps_enabled",
        "description": "Ignore Favorites",
        "tooltip": "If enabled, applications set as Favorite will not be displayed in the list of \"Recent Applications\"."
    },
    "pref_recently_used_apps_invert_order": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "dependency": "pref_recently_used_apps_enabled",
        "description": "Invert recently used applications order",
        "tooltip": "By default, the most recently used application is at the top of the list. With this option enabled, the most recently used application will be at the bottom of the list."
    },
    "pref_recently_used_apps_max_amount": {
        "type": "spinbutton",
        "indent": true,
        "dependency": "pref_recently_used_apps_enabled",
        "default": 20,
        "min": 5,
        "max": 100,
        "step": 1,
        "units": "applications",
        "description": "Maximum recently used applications to display:",
        "tooltip": ""
    },

    "context_menu_separator": {
        "type": "separator"
    },
    "save_settings_3": {
        "type": "button",
        "description": "Click here to save settings",
        "callback": "_hardRefreshAll"
    },
    "context_menu_header": {
        "type": "header",
        "description": "Applications context menu extras"
    },
    "pref_context_show_add_to_panel": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Show \"Add to panel\" on context"
    },
    "pref_context_show_add_to_desktop": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Show \"Add to desktop\" on context"
    },
    "pref_context_show_add_remove_favorite": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show \"Add/Remove to/from favorites\" on context"
    },
    "pref_context_show_uninstall": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Show \"Uninstall\" on context"
    },
    "pref_context_show_bumblebee": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Show \"Run with NVIDIA GPU\" on context"
    },
    "pref_context_show_run_as_root": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Show \"Run as root\" on context"
    },
    "pref_context_show_run_from_terminal": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show \"Run from terminal\" on context"
    },
    "pref_context_show_run_from_terminal_as_root": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show \"Run from terminal as root\" on context"
    },
    "pref_context_show_desktop_file_folder": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show \"Open .desktop file folder\" on context"
    },
    "pref_context_show_edit_desktop_file": {
        "type": "checkbox",
        "indent": true,
        "default": true,
        "description": "Show \"Edit .desktop file\" on context",
        "tooltip": "It adds to the applications context menu an entry that will allow you to open the current selected application's .desktop file in a text editor."
    },
    "context_menu_separator_2": {
        "type": "separator"
    },
    "pref_context_gain_privileges": {
        "type": "checkbox",
        "indent": true,
        "default": false,
        "description": "Gain privileges of not owned files",
        "tooltip": "If enabled, this options will open as root .desktop files that aren't owned by the current user.\n\nThis isn't needed for all text editors. Some text editors will allow you to open and edit not owned files and will ask for the root password at the moment of saving the changes."
    },
    "pref_context_custom_editor_for_edit_desktop_file": {
        "type": "entry",
        "indent": true,
        "default": "",
        "description": "Custom text editor:",
        "tooltip": "Set a custom text editor to open .desktop files (just the name of the text editor executable or the path to it).\nLeave it blank to let the system decide."
    },
    "pref_privilege_elevator": {
        "type": "entry",
        "indent": true,
        "default": "/usr/bin/pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY",
        "description": "Privileges elevator:",
        "tooltip": "The graphical front-end to use to run applications as root.\nThis is used by the \"Open as Root\" context menu and the option \"Gain privileges of not owned files\"."
    },
    "pref_terminal_emulator": {
        "type": "entry",
        "indent": true,
        "default": "x-terminal-emulator",
        "description": "Terminal emulator:",
        "tooltip": "Choose the terminal emulator used by all launch from terminal options.\nIMPORTANT!!! The terminal emulator has to support the -e argument (execute the argument to this option inside the terminal)."
    },
    "pref_default_shell": {
        "type": "entry",
        "indent": true,
        "default": "bash",
        "description": "Command interpreter (shell):",
        "tooltip": "The command interpreter (shell) used when launching programs from a terminal.\nIMPORTANT!!! The shell has to support the -c argument (take the argument passed by this option as a command to execute.)."
    },

    "save_settings_2": {
        "type": "button",
        "description": "Click here to save settings",
        "callback": "_hardRefreshAll"
    },

