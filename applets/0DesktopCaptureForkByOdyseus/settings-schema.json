        "default": 30
    },
    "pref_imp_exp_last_selected_directory": {
        "type": "generic",
        "default": ""
    },
    "pref_last_camera_capture": {
        "type": "generic",
        "default": {}
    },
    "pref_last_recorder_capture": {
        "type": "generic",
        "default": {}
    }
}
