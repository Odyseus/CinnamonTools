{
    "general-settings": {
        "type": "header",
        "description": "Applet Settings"
    },
    "pref_custom_icon_for_applet": {
        "type": "iconfilechooser",
        "indent": true,
        "default": "desktop-capture-camera-photo-symbolic",
        "description": "Normal icon",
        "tooltip": "Select an icon to show in the panel."
    },
    "pref_custom_icon_for_applet_recording": {
        "type": "iconfilechooser",
        "indent": true,
        "default": "desktop-capture-media-record-symbolic",
        "description": "Screencasting icon",
        "tooltip": "Select an icon to show in the panel when screencasting is active."
    },
    "pref_display_device_options_in_sub_menu": {
        "default": true,
        "type": "checkbox",
        "description": "Display menu quick options in a submenu"
    },
    "sep1": {
        "type": "separator"
    },
    "general-settings-screenshot": {
        "type": "header",
        "description": "Screenshots: General Settings"
    },
    "pref_camera_save_dir": {
        "type": "filechooser",
        "indent": true,
        "select-dir": true,
        "default": "",
        "description": "Save location",
        "tooltip": "Path to a folder to save new screenshots."
    },
    "pref_camera_save_prefix": {
        "indent": true,
        "default": "Screenshot-%TYPE-%Y-%M-%D-%H%I%S",
        "type": "entry",
        "description": "File name format",
        "tooltip": "Format for the generated file name. Possible placeholders are:\n\n%Y = year\n%M = month\n%D = day\n%H = hours\n%I = minutes\n%S = seconds\n%m = milliseconds\n%TYPE = area, window, etc. (for screenshots only)"
    },
    "sep2": {
        "type": "separator"
    },
    "general-settings-recorder": {
        "type": "header",
        "description": "Recorder: General Settings"
    },
    "pref_copy_to_clipboard": {
        "default": true,
        "type": "combobox",
        "options": {
            "Off": 0,
            "File path": 1,
            "Image data": 2
        },
        "description": "Copy to clipboard",
        "tooltip": "Whether to copy the file path or image data of screenshots to clipboard after capture."
    },
    "label-recorder-settings": {
        "indent": true,
        "type": "label",
        "description": "Please note not all recorder tools may respect these settings."
    },
    "pref_recorder_save_dir": {
        "type": "filechooser",
        "select-dir": true,
        "indent": true,
        "default": "",
        "description": "Save location",
        "tooltip": "Path to a folder for new screen recordings."
    },
    "pref_recorder_save_prefix": {
        "indent": true,
        "default": "Screencast-%Y-%M-%D-%H%I%S",
        "type": "entry",
        "description": "File name format",
        "tooltip": "Format for the generated file name. Possible placeholders are:\n\n%Y = year\n%M = month\n%D = day\n%H = hours\n%I = minutes\n%S = seconds\n%m = milliseconds\n%TYPE = area, window, etc. (for screenshots only)"
    },
    "sep3": {
        "type": "separator"
    },
    "keybindings-settings": {
        "type": "header",
        "description": "Keybindings Settings"
    },
    "apply-keybindings-button-1": {
        "type": "button",
        "description": "Apply keybinding changes",
        "callback": "drawMenu"
    },
    "keybindings-screenshot-settings": {
        "type": "header",
        "description": "Screenshot Keybindings"
    },
    "pref_key_camera_window": {
        "indent": true,
        "type": "keybinding",
        "description": "Capture a window",
        "default": ""
    },
    "pref_key_camera_area": {
        "indent": true,
        "type": "keybinding",
        "description": "Capture an area",
        "default": ""
    },
    "pref_key_camera_cinnamon_ui": {
        "indent": true,
        "type": "keybinding",
        "description": "Capture a Cinnamon UI element",
        "default": "",
        "tooltip": "Cinnamon only."
    },
    "pref_key_camera_screen": {
        "indent": true,
        "type": "keybinding",
        "description": "Capture the screen",
        "default": ""
    },
    "pref_key_camera_monitor_0": {
        "indent": true,
        "type": "keybinding",
        "description": "Capture monitor 1",
        "default": "",
        "tooltip": "Cinnamon only."
    },
    "pref_key_camera_monitor_1": {
        "indent": true,
        "type": "keybinding",
        "description": "Capture monitor 2",
        "default": "",
        "tooltip": "Cinnamon only."
    },
    "pref_key_camera_monitor_2": {
        "indent": true,
        "type": "keybinding",
        "description": "Capture monitor 3",
        "default": "",
        "tooltip": "Cinnamon only."
    },
    "pref_key_camera_repeat": {
        "indent": true,
        "type": "keybinding",
        "description": "Repeat last capture",
        "default": ""
    },
    "keybindings-screencast-settings": {
        "type": "header",
        "description": "Screencast Keybindings"
    },
    "pref_key_recorder_stop_toggle": {
        "indent": true,
        "type": "keybinding",
        "description": "Start/stop recording",
        "tooltip": "Will start only Cinnamon Recorder. Will stop any recorder using its stop-command.",
        "default": ""
    },
    "pref_key_recorder_repeat": {
        "indent": true,
        "type": "keybinding",
        "description": "Repeat last capture",
        "default": ""
    },
    "apply-keybindings-button-2": {
        "type": "button",
        "description": "Apply keybinding changes",
        "callback": "drawMenu"
    },
    "sep4": {
        "type": "separator"
    },
    "recorder-settings": {
        "type": "header",
        "description": "Screenshots: Cinnamon's built-in Settings"
    },
    "pref_timer_display_on_screen": {
        "default": true,
        "type": "checkbox",
        "description": "Show capture timer",
        "tooltip": "Whether to show the timer on the screen."
    },
    "pref_capture_window_as_area": {
        "default": false,
        "type": "checkbox",
        "description": "Capture windows as area",
        "tooltip": "Asking the desktop manager for a screenshot of a window would usually result in a nice image retaining any transparent regions. But depending on the graphics drivers and Cinnamon version it may turn out black or distorted."
    },
    "pref_include_window_frame": {
        "default": true,
        "type": "checkbox",
        "description": "Include window frame",
        "tooltip": "Whether to include the window frame and titlebar in window captures."
    },
    "pref_use_camera_flash": {
        "default": true,
        "type": "checkbox",
        "description": "Show camera flash",
        "tooltip": "Whether to show a bright flash over the capture area"
    },
    "pref_include_styles": {
        "default": false,
        "type": "checkbox",
        "description": "Include highlight style on screenshot",
        "tooltip": "When taking a screenshot of the Cinnamon UI, include the highlight effect in the captured image. The 'desktop-capture-capture-outline-frame' CSS class is the one that style the highlight effect."
    },
    "pref_play_shutter_sound": {
        "default": true,
        "type": "checkbox",
        "description": "Play shutter sound",
        "tooltip": "Whether to play the shutter sound as the capture is made"
    },
    "pref_play_timer_interval_sound": {
        "default": true,
        "type": "checkbox",
        "description": "Play timer interval sound",
        "tooltip": "Whether to play the timer interval sound as the timer counts down"
    },
    "pref_show_copy_toggle": {
        "default": false,
        "type": "checkbox",
        "description": "Show toggle button for copying image to clipboard",
        "tooltip": "Whether to show another toggle button in the menu for copying image to clipboard. If you have notifications enabled you probably don't need this set."
    },
    "pref_auto_copy_data_auto_off": {
        "default": false,
        "type": "checkbox",
        "description": "Turn off auto copy image data toggle after capture",
        "tooltip": "When set, the copy image to clipboard toggle button override will be turned off after a successful capture."
    },
    "pref_auto_copy_data": {
        "default": false,
        "type": "generic"
    },
    "sep5": {
        "type": "separator"
    },
    "theme-header": {
        "type": "header",
        "description": "Appearance"
    },
    "pref_theme_selector": {
        "type": "combobox",
        "default": "dark",
        "indent": true,
        "options": {
            "Light overlay": "light",
            "Dark overlay": "dark",
            "Custom overlay": "custom"
        },
        "description": "Overlay theme",
        "tooltip": "These themes are used to style the Cinnamon helpers overlay (area selector, window selector, etc.). The built-in themes can be found in APPLET_FOLDER/themes and can be used as a base to create a custom theme."
    },
    "pref_theme_custom": {
        "type": "filechooser",
        "indent": true,
        "select-dir": false,
        "default": "",
        "description": "Path to custom stylesheet"
    },
    "sep7": {
        "type": "separator"
    },
    "disclaimer-header": {
        "type": "header",
        "description": "Disclaimer"
    },
    "pref_disclaimer_read": {
        "type": "checkbox",
        "default": false,
        "indent": true,
        "description": "I read the disclaimer and I'm aware of the consequences",
        "tooltip": "If you read the help page for this applet (Known issues), you know what this is about."
    },
    "sep8": {
        "type": "separator"
    },
    "debugging-header": {
        "type": "header",
        "description": "Debugging"
    },
    "pref_logging_level": {
        "type": "combobox",
        "indent": true,
        "default": 0,
        "description": "Logging level (*)",
        "tooltip": "It enables the ability to log the output of several functions used by the extension.\n\nNormal: Only log messages caused by non critical errors.\nVerbose: Additinally log extra output messages and all HTTP responses.\nVery verbose: Additionally log all method calls from all JavaScript classes/prototypes along with their execution time.",
        "options": {
            "Normal": 0,
            "Verbose": 1,
            "Very verbose": 2
        }
    },
    "pref_debugger_enabled": {
        "type": "checkbox",
        "indent": true,
        "description": "Enable debugger (*)",
        "tooltip": "It enables the ability to catch all exceptions that under normal use would not be caught.",
        "default": false
    },
    "label": {
        "type": "label",
        "indent": true,
        "description": "(*) Requires Cinnamon restart to enable/disable"
    },
    "pref_record_sound": {
        "default": 0,
        "type": "generic"
    },
    "pref_cinn_rec_current_profile": {
        "default": "default",
        "type": "generic"
    },
    "pref_cinn_rec_profiles": {
        "type": "generic",
        "default": {
            "x264enc": {
                "title": "H264",
                "description": "Encoder: H264\nMuxer: Matroska\nFile extension: mkv",
                "file-extension": "mkv",
                "pipeline": "x264enc ! queue ! matroskamux"
            }
        }
    },
    "pref_program_support": {
        "type": "generic",
        "default": {
            "camera": {
                "gnome-screenshot": {
                    "title": "GNOME Screenshot",
                    "timer": true,
                    "cursor": {
                        "on": "--include-pointer",
                        "off": ""
                    },
                    "append-1": "{{CURSOR}} --file={{DIRECTORY}}/{{FILENAME}}.{{EXT}}png{{EXT}}",
                    "menuitems": {
                        "Open GUI": "gnome-screenshot --interactive",
                        "---": "",
                        "Area": "gnome-screenshot --area {{APPEND_1}}",
                        "Current Window": "gnome-screenshot --delay {{DELAY}} --window {{APPEND_1}}",
                        "Screen": "gnome-screenshot --delay {{DELAY}} {{APPEND_1}}"
                    }
                },
                "shutter": {
                    "title": "Shutter",
                    "timer": true,
                    "cursor": {
                        "on": "--include_cursor",
                        "off": "--remove_cursor"
                    },
                    "append-1": "--profile=test --exit_after_capture {{CURSOR}} --delay={{DELAY}} --output={{DIRECTORY}}/{{FILENAME}}.{{EXT}}png{{EXT}} --min_at_startup --disable_systray --exit_after_capture",
                    "menuitems": {
                        "Area": "shutter --select {{APPEND_1}}",
                        "Current Window": "shutter --active {{APPEND_1}}",
                        "Screen": "shutter --full {{APPEND_1}}",
                        "Tooltip": "shutter --tooltip {{APPEND_1}}",
                        "Window Menu": "shutter --menu {{APPEND_1}}",
                        "Window Section": "shutter --section {{APPEND_1}}",
                        "Window": "shutter --window {{APPEND_1}}"
                    }
                },
                "xwd": {
                    "title": "XWD",
                    "append-1": "{{DIRECTORY}}/{{FILENAME}}.{{EXT}}png{{EXT}}",
                    "menuitems": {
                        "Screen": "bash -c \"xwd -root | convert - {{APPEND_1}}\"",
                        "Window": "#INTERACTIVE_WINDOW_HELPER# bash -c \"xwd -id {{I_X_WINDOW_ID}} | convert - {{APPEND_1}}\""
                    }
                },
                "imagemagick": {
                    "title": "ImageMagick",
                    "append-1": "{{DIRECTORY}}/{{FILENAME}}.{{EXT}}png{{EXT}}",
                    "menuitems": {
                        "Area": "#INTERACTIVE_AREA_HELPER# import -window root -crop {{I_WIDTH}}x{{I_HEIGHT}}+{{I_X}}+{{I_Y}} {{APPEND_1}}",
                        "Root window": "import -window root {{APPEND_1}}",
                        "Screen": "import -window root -display :0.0 -screen {{APPEND_1}}",
                        "Window": "#INTERACTIVE_WINDOW_HELPER# import -window root -crop {{I_WIDTH}}x{{I_HEIGHT}}+{{I_X}}+{{I_Y}} {{APPEND_1}}"
                    }
                },
                "kazam": {
                    "title": "Kazam",
                    "menuitems": {
                        "Open GUI": "kazam",
                        "Preferences": "kazam --preferences",
                        "---": "",
                        "Area": "kazam --area",
                        "Current Window": "kazam --window",
                        "Screen": "kazam --fullscreen",
                        "Window": "kazam --select"
                    }
                }
            },
            "recorder": {
                "ffmpeg": {
                    "title": "FFmpeg",
                    "sound": {
                        "on": "-f alsa -ac 2 -i pulse",
                        "off": ""
                    },
                    "append-1": "{{DIRECTORY}}/{{FILENAME}}.{{EXT}}mkv{{EXT}}",
                    "menuitems": {
                        "Area": "#INTERACTIVE_AREA_HELPER# bash -c \"ffmpeg {{SOUND}} -f x11grab -s {{I_WIDTH}}x{{I_HEIGHT}} -r 30 -i :0.0+{{I_X}},{{I_Y}} {{APPEND_1}}\"",
                        "Screen": "bash -c \"ffmpeg {{SOUND}} -f x11grab -s {{SCREEN_WIDTH}}x{{SCREEN_HEIGHT}} -r 30 -i :0.0 {{APPEND_1}}\"",
                        "Window": "#INTERACTIVE_WINDOW_HELPER# bash -c \"ffmpeg {{SOUND}} -f x11grab -s {{I_WIDTH}}x{{I_HEIGHT}} -r 30 -i :0.0+{{I_X}},{{I_Y}} {{APPEND_1}}\""
                    },
                    "stop-command": "killall ffmpeg"
                },
                "recordmydesktop": {
                    "title": "RecordMyDesktop",
                    "sound": {
                        "on": "",
                        "off": "--no-sound"
                    },
                    "append-1": "-o {{DIRECTORY}}/{{FILENAME}}.{{EXT}}ogv{{EXT}}",
                    "menuitems": {
                        "#Open GUI": "gtk-recordmydesktop",
                        "---": "",
                        "Area": "#INTERACTIVE_AREA_HELPER# recordmydesktop {{SOUND}} -x {{I_X}} -y {{I_Y}} --width {{I_WIDTH}} --height {{I_HEIGHT}} {{APPEND_1}}",
                        "Screen": "recordmydesktop {{SOUND}} -x 0 -y 0 --width {{SCREEN_WIDTH}} --height {{SCREEN_HEIGHT}} {{APPEND_1}}",
                        "Window": "#INTERACTIVE_WINDOW_HELPER# recordmydesktop {{SOUND}} --windowid {{I_X_WINDOW_ID}} {{APPEND_1}}"
                    },
                    "stop-command": "killall recordmydesktop"
                },
                "byzanz-gif": {
                    "title": "Byzanz GIF",
                    "cursor": {
                        "on": "--cursor",
                        "off": ""
                    },
                    "append-1": "byzanz-record --exec='sleep 191449' {{CURSOR}}",
                    "append-2": "-x {{I_X}} -y {{I_Y}} --width={{I_WIDTH}} --height={{I_HEIGHT}}",
                    "append-3": "{{DIRECTORY}}/{{FILENAME}}.{{EXT}}gif{{EXT}}",
                    "menuitems": {
                        "Area": "#INTERACTIVE_AREA_HELPER# {{APPEND_1}} {{APPEND_2}} {{APPEND_3}}",
                        "Screen": "{{APPEND_1}} -x 0 -y 0 --width={{SCREEN_WIDTH}} --height={{SCREEN_HEIGHT}} {{APPEND_3}}",
                        "Window": "#INTERACTIVE_WINDOW_HELPER# {{APPEND_1}} {{APPEND_2}} {{APPEND_3}}"
                    },
                    "stop-command": "pkill -nf 'sleep 191449'"
                },
                "byzanz-ogv": {
                    "title": "Byzanz OGV",
                    "sound": {
                        "on": "--audio",
                        "off": ""
                    },
                    "cursor": {
                        "on": "--cursor",
                        "off": ""
                    },
                    "append-1": "byzanz-record --exec='sleep 191449' {{CURSOR}} {{SOUND}}",
                    "append-2": "-x {{I_X}} -y {{I_Y}} --width={{I_WIDTH}} --height={{I_HEIGHT}}",
                    "append-3": "{{DIRECTORY}}/{{FILENAME}}.{{EXT}}ogv{{EXT}}",
                    "menuitems": {
                        "Area": "#INTERACTIVE_AREA_HELPER# {{APPEND_1}} {{APPEND_2}} {{APPEND_3}}",
                        "Screen": "{{APPEND_1}} -x 0 -y 0 --width={{SCREEN_WIDTH}} --height={{SCREEN_HEIGHT}} {{APPEND_3}}",
                        "Window": "#INTERACTIVE_WINDOW_HELPER# {{APPEND_1}} {{APPEND_2}} {{APPEND_3}}"
                    },
                    "stop-command": "pkill -nf 'sleep 191449'"
                },
                "kazam": {
                    "title": "Kazam",
                    "menuitems": {
                        "#Open GUI": "kazam"
                    }
                }
            }
        }
    },
