{
    "behavior-header": {
        "type": "header",
        "description": "Behavior"
    },
    "pref_animation_duration": {
        "type": "spinbutton",
        "default": 500,
        "min": 0,
        "max": 2000,
        "step": 50,
        "units": "milliseconds",
        "description": "Animation duration: "
    },
    "pref_expand_on_hover": {
        "type": "checkbox",
        "default": false,
        "description": "Expand on hover"
    },
    "pref_expand_on_hover_delay": {
        "type": "spinbutton",
        "default": 1000,
        "min": 0,
        "max": 10000,
        "step": 100,
        "dependency": "expand-on-hover",
        "units": "milliseconds",
        "description": "Expand on hover delay: "
    },
    "pref_collapse_on_leave": {
        "type": "checkbox",
        "default": false,
        "description": "Collapse on un-hover"
    },
    "pref_collapse_on_leave_delay": {
        "type": "spinbutton",
        "default": 1000,
        "min": 0,
        "max": 10000,
        "step": 100,
        "dependency": "collapse-on-leave",
        "units": "milliseconds",
        "description": "Collapse on un-hover delay: "
    },
    "pref_init_delay": {
        "type": "spinbutton",
        "default": 5,
        "min": 0,
        "max": 30,
        "step": 1,
        "units": "seconds",
        "description": "Startup collapse delay: ",
        "tooltip": "The delay until the applet automatically collapses upon startup"
    },
    "sep-1": {
        "type": "separator"
    },
    "appearance-header": {
        "type": "header",
        "description": "Appearance"
    },
    "pref_sort_icons": {
        "type": "checkbox",
        "default": true,
        "description": "Sort icons by name",
        "tooltip": "If unchecked, the order of the icons will be pretty much random"
    },
    "pref_no_hover_for_tray_icons": {
        "type": "checkbox",
        "default": false,
        "description": "Disable hover effect for tray icons",
        "tooltip": "If you have problems with the hover effect or it simply doesn't look good, you should enable this setting"
    },
    "pref_horizontal_expand_icon_name": {
        "type": "iconfilechooser",
        "default": "pan-start",
        "description": "Horizontal expand icon: ",
        "tooltip": "Enter either the icon's qualified name or it's full path"
    },
    "pref_horizontal_collapse_icon_name": {
        "type": "iconfilechooser",
        "default": "pan-end",
        "description": "Horizontal collapse icon: ",
        "tooltip": "Enter either the icon's qualified name or it's full path"
    },
    "pref_tray_icon_padding": {
        "type": "spinbutton",
        "default": 5,
        "min": 0,
        "max": 20,
        "step": 1,
        "units": "px",
        "description": "Padding of tray icons: "
    },
    "debugging-header": {
        "type": "header",
        "description": "Debugging"
    },
    "pref_logging_level": {
        "type": "combobox",
        "indent": true,
        "default": 0,
        "description": "Logging level (*)",
        "tooltip": "It enables the ability to log the output of several functions used by the extension.\n\nNormal: Only log messages caused by non critical errors.\nVerbose: Additionally log extra output messages and all HTTP responses.\nVery verbose: Additionally log all method calls from all JavaScript classes/prototypes along with their execution time.",
        "options": {
            "Normal": 0,
            "Verbose": 1,
            "Very verbose": 2
        }
    },
    "pref_debugger_enabled": {
        "type": "checkbox",
        "indent": true,
        "description": "Enable debugger (*)",
        "tooltip": "It enables the ability to catch all exceptions that under normal use would not be caught.",
        "default": false
    },
    "label": {
        "type": "label",
        "indent": true,
        "description": "(*) Requires Cinnamon restart to enable/disable"
    },
    "pref_icon_visibility_list": {
        "type": "generic",
        "default": "{}",
        "description": "Internal use"
    }
}
